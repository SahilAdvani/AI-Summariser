{
  "manifest_version": 3,
  "name": "Summarizer Extension",
  "version": "1.0",
  "description": "Summarizes any webpage using a Gemini API.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ]
}
